<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/name"
        android:text="车名"
        android:textSize="22sp"
        android:textColor="#5ABC4F"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/color"
        android:layout_below="@id/name"
        android:text="颜色"
        android:textSize="18sp"
        android:textColor="#5ABC4F"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/sm1"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/sm2"
        android:layout_alignBottom="@+id/sm2"
        android:layout_toEndOf="@+id/name"
        android:text="色母1"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/sm2"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="色母2"
        android:layout_toRightOf="@id/sm1"
        android:layout_marginTop="8dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/sm3"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="色母3"
        android:layout_toRightOf="@id/sm2"
        android:layout_marginTop="8dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/sm4"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="色母4"
        android:layout_toRightOf="@id/sm3"
        android:layout_marginTop="8dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/sm5"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="色母5"
        android:layout_below="@id/sm1"
        android:layout_toRightOf="@id/color"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/sm6"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="色母6"
        android:layout_toRightOf="@id/sm5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sm2"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/sm7"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="色母7"
        android:layout_below="@id/sm3"
        android:layout_toRightOf="@id/sm6"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>

</RelativeLayout>
