<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wang.peise.MainActivity"
    android:background="@drawable/sehuan">

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="3000dp"
        android:layout_height="30dp"
        android:src="@drawable/xiaohui"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:paddingRight="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:text="version 1.0"
        android:padding="5dp"
        android:gravity="right"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btn_ps"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="配 色 查 询"
        android:textSize="28sp"
        android:background="#00000000"
        android:drawableLeft="@drawable/sousuo"/>
    <Button
        android:id="@+id/btn_js"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="报 价 预 算"
        android:textSize="28sp"
        android:layout_below="@id/btn_ps"
        android:background="#00000000"
        android:drawableLeft="@drawable/yusuan"/>

    <Button
        android:id="@+id/btn_qs"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="在线取色器"
        android:textSize="28sp"
        android:layout_below="@id/btn_js"
        android:background="#00000000"
        android:drawableLeft="@drawable/quse" />

    <Button
        android:id="@+id/btn_sk"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="潘 通 色 卡"
        android:textSize="28sp"
        android:layout_below="@id/btn_qs"
        android:background="#00000000"
        android:drawableLeft="@drawable/seka" />
    <Button
        android:id="@+id/btn_tp"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="图 片 欣 赏"
        android:textSize="28sp"
        android:layout_below="@id/btn_sk"
        android:background="#00000000"
        android:drawableLeft="@drawable/che" />

    <Button
        android:id="@+id/btn_call"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_2"
        android:background="#00000000"
        android:text="帮助与反馈"
        android:textSize="22sp"
        android:layout_marginLeft="210dp"
        android:drawableLeft="@drawable/fankui"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
